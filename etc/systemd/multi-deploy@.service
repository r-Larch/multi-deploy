[Unit]
Description=Multi-project auto-deploy for %i
After=network-online.target docker.service
Wants=network-online.target docker.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/opt/multi-deploy
EnvironmentFile=/opt/multi-deploy/projects/%i/project.env
ExecStart=/usr/bin/env bash -lc '/opt/multi-deploy/bin/watch-and-deploy.sh ${REPO} ${NAME} ${BRANCH} ${COMPOSE_FILE} ${ENV_FILE}'

[Install]
WantedBy=multi-user.target
